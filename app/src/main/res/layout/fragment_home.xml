<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Home">

    <!--강아지 등록 버튼-->

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardUseCompatPadding="true"
        >

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="20dp"
                android:gravity="center"
                android:text="지금 함께하는 반려동물을 등록해보세요"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/info_btn"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="반려동물 등록"
                android:background="@drawable/button_style"
                android:textColor="#6655A4"

                />

            <LinearLayout
                android:id="@+id/pet_info_home"
                android:background="@drawable/button_style"
                android:layout_margin="20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/pet_image_home"
                    android:layout_marginLeft="25dp"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/baseline_calendar_today_24"
                    app:civ_border_overlay="true"
                    app:civ_border_width="1.5dp"
                    app:civ_border_color="#655071"/>
                
                <LinearLayout

                    android:layout_margin="10dp"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/pet_name_birth_home"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:text="수정(여) | 13개월"
                        android:textSize="12dp"

                        />

                    <TextView
                        android:id="@+id/pet_kind_home"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:textSize="10dp"
                        android:text="말티즈"

                        />



                </LinearLayout>

            </LinearLayout>


        </LinearLayout>





    </androidx.cardview.widget.CardView>




</FrameLayout>